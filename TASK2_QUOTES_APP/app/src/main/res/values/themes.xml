<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.Quotes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- You can customize your app's light/dark colors here if needed -->
    </style>

    <!-- REMOVE system splash by disabling all visual elements -->
    <style name="Theme.Quotes.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/transparent</item>
        <item name="windowSplashScreenAnimatedIcon">@null</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.Quotes</item>
    </style>

    <!-- Your main app theme -->
    <style name="Theme.Quotes" parent="Base.Theme.Quotes" />

</resources>
